<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

  <script src="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.js"></script>
  <link href="https://api.mapbox.com/mapbox-gl-js/v2.9.1/mapbox-gl.css" rel="stylesheet" />

  <script
    src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js"></script>
  <link rel="stylesheet"
    href="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.css"
    type="text/css" />

  <link href="/styles.css" rel="stylesheet" />
</head>

<body>
  <div class="container-fluid">
    <div class="row" id="main-container">
      <div class="col-md-9 mt-3 px-0">
        <div id="map"></div>
        <div class="bottom-bar" id="bottom-bar"></div>
      </div>
      <div class="col-md-3 py-3" id="info-panel">
        <div id="loading-pane" style="display:block">
          <div class="alert alert-secondary" role="alert">
            Đang tải dữ liệu...
          </div>
        </div>
        <div id="place-container" style="display:none">
          <div class=" card border-success text-success mb-3" id="place-info-pane">
            <div class=" card-body">
              <h5 class="card-title">
                <i class="bi bi-info-circle"></i>
                Thông tin địa điểm
              </h5>
              <p class="card-text">Chưa có dữ liệu.</p>
            </div>
          </div>
          <div id="billboard-container" style="display:none">
            <div class="card border-info text-info mb-3" id="billboard-info-pane">
              <div class="card-body">
                <h5 class="card-title">
                  <i class="bi bi-info-circle"></i>
                  Thông tin bảng quảng cáo
                </h5>
                <p class="card-text">Chưa có dữ liệu.</p>
              </div>
            </div>
          </div>
          <div id="billboard-detail-container">
            <div class="modal fade" id="billboard-info-modal" tabindex="-1" role="dialog"
              aria-labelledby="info-modal-title" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="info-modal-title">Chi tiết bảng quảng cáo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body" id="billboard-modal-body">
                  </div>
                  <div class="modal-footer" id="billboard-modal-footer">
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div id="report-detail-container">
            <div class="modal fade" id="report-info-modal" tabindex="-1" role="dialog"
              aria-labelledby="info-modal-title" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="info-modal-title">Chi tiết báo cáo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body" id="report-modal-body">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Quay lại</button>
                  </div>
                </div>
              </div>
            </div>
            <div class="modal fade" id="free-report-info-modal" tabindex="-1" role="dialog"
              aria-labelledby="info-modal-title" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="info-modal-title">Chi tiết báo cáo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body" id="free-report-modal-body">
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Quay lại</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
<script>
  function loadPanelDetail(item) {
    document.getElementById("billboard-modal-body").innerHTML = "";
    document.getElementById("billboard-modal-footer").innerHTML = "";

    const info = JSON.parse(item);

    let bodyHtml = `<h5 class="card-title">${info.Paneltype}</h5>
                <h6 class="card-subtitle mb-2 text-muted">${info.address}</h6>
                <p class="card-text">Kích thước: ${info.size}<br>
                                      Số lượng: ${info.amount}<br>
                                      Hình thức: <b>${info.billboardType}</b><br>
                                      Phân loại: <b>${info.positionType}</b><br>
                                      Ngày hết hạn: <b>${info.expDate.slice(0, 10)}</b></p>
                                      <img class="img-fluid" src="https://lh3.google.com/u/0/d/${info.picturePanel}" referrerpolicy="no-referrer" alt=""><br>`

    let footerHtml = `<button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Quay lại</button>
                      <a class="btn btn-outline-danger float-right" id="detail-report-button"
                        href="/api/report/${info.panelId}?address=${info.address}&lng=${info.long}&lat=${info.lat}">
                          <i class="bi bi-exclamation-octagon-fill"></i> BÁO CÁO VI PHẠM
                      </a>`;

    document.getElementById("billboard-modal-body").innerHTML = bodyHtml;
    document.getElementById("billboard-modal-footer").innerHTML = footerHtml;
  }

  function loadReportDetail(item, isFreePoint) {
    console.log(item);

    if (isFreePoint === true) {
      document.getElementById("free-report-modal-body").innerHTML = "";
    }
    else {
      document.getElementById("report-modal-body").innerHTML = "";
    }

    const info = JSON.parse(item.includes('&quot;') ? item.replace(/&quot;/ig, '"') : item);
    let imgDivs = "";

    if (info.reportImgId.length === 2) {
      imgDivs += `<img class="img-fluid" src="http://localhost:3500/api/reportImg/getImgReport/${info.reportImgId[0]}"" alt=""><br>
                  <img class="img-fluid" src="http://localhost:3500/api/reportImg/getImgReport/${info.reportImgId[1]}"" alt=""><br><br>`
    }
    else if (info.reportImgId.length === 1) {
      imgDivs += `<img class="img-fluid" src="http://localhost:3500/api/reportImg/getImgReport/${info.reportImgId[0]}"" alt=""><br><br>`
    }

    let bodyHtml = `<h6 class="card-subtitle mb-2 text-muted">${info.address}</h6>
                    <p class="card-text">Họ tên người gửi: <b>${info.name}</b><br>
                                      Email: <b>${info.email}</b><br>
                                      Số điện thoại: <b>${info.phone}</b><br>
                                      Nội dung: ${info.content}
                                      Hình ảnh đối tượng báo cáo:<br><br>
                                      ${imgDivs}
                                      Tình trạng xử lí: <b>${info.state == 0 ? "Chưa xử lí" : "Đã xử lí"}</b><br>
                                      Hình thức xử lí: <b>${info.actionHandler}</b></p>`

    if (isFreePoint === true) {
      document.getElementById("free-report-modal-body").innerHTML = bodyHtml;
    }
    else {
      document.getElementById("report-modal-body").innerHTML = bodyHtml;
    }
  }
</script>
<script src="/map.js" defer></script>
</body>

</html>