    <script>
        function showPosition(lng, lat) {
            console.log(lng, lat);
            if (marker) {
                marker.remove();
            }

            marker = new mapboxgl.Marker({ color: "#0000ff" })
                .setLngLat([lng, lat])
                .addTo(map);

            map.easeTo({
                center: [lng, lat],
            });
        }
    </script>
